GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_RETRIES=2

# OpenAI API Configuration (Optional - for vector search)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Database Configuration
DATABASE_URI=sqlite:///./chinook_qa.db
DATABASE_ECHO=false

# Chain Configuration
CHAIN_TOP_K_RESULTS=10
CHAIN_ENABLE_STREAMING=true
CHAIN_ENABLE_APPROVAL=false
CHAIN_QUERY_TIMEOUT=30

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_ENABLE_STREAMING=true
AGENT_ENABLE_VECTOR_SEARCH=false
AGENT_TOP_K_RESULTS=5

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=500

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/sql_qa.log

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ALLOW_ORIGINS=["*"]

# Feature Flags
ENABLE_CHAIN_APPROACH=true
ENABLE_AGENT_APPROACH=true
ENABLE_COMPARISON_MODE=true
ENABLE_EXPERIMENTAL_FEATURES=false

# Development Settings
DEBUG=false
RELOAD=true
TESTING=false